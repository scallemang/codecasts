<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <% if params[:plan] == '2' %>
    <h1 class="text-center">Pro Account</h1>
    <p class="text-center">Sign up for free and get basic access to the DevMatch community.</p>
  <% else %>
    <h1 class="text-center">Basic Account</h1>
    <p class="text-center">Sign up for the pro account for $10/month for full access to the community.</p>
  <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
      <% if params[:plan] == '2' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>    
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
